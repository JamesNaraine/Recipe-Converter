WindowManager:
    MainWindow: 

        name: "main"
        id: main_window
    LoadingWindow:
        name: "load"
        id: loading_window
    OutputWindow:
        name: "out"
        id: output_window


<MainWindow>:
    name: "main"

    input: input
    output: output

    GridLayout:
        cols:1
        size: root.width + 1, root.height + 1

        GridLayout:
            cols:3
            size_hint: 0.2, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.95}

            Widget:

            Button:
                text: "go"
                on_press: 
                    app.root.current = "out"
                    # run code

            Widget:

        TextInput:
            id: input
            size_hint:0.8, 0.6
            pos_hint: {"center_x": 0.5, "top": 0.90}
            multiline: True


        GridLayout:
            cols:3
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": 0.5, "top":0.7}

            Button:
                text: "camera"


            Button:
                text: "Language"
                

            Button:
                id: output
                text: "Measurement"

<LoadingWindow>:
    name: "Loading"

<OutputWindow>:
    name: "Output"

    Button:
        text: "Go"
        on_release: 
            app.root.current = "main"

<FloatLayout>