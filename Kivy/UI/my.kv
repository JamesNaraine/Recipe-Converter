WindowManager:
    MainWindow: 

        name: "main"
        id: main_window
    LoadingWindow:
        name: "load"
        id: loading_window
    OutputWindow:
        name: "output"
        id: output_window


<MainWindow>:
    name: "main"

    input_text: input_field

    GridLayout:
        cols:1
        size: root.width + 1, root.height + 1

        GridLayout:
            cols:3
            size_hint: 0.2, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.95}

            Widget:

            Button:
                text: "go"
                on_press: root.btn()
                on_press: app.root.current = "output"

            Widget:

        TextInput:
            id: input_field
            size_hint:0.8, 0.6
            pos_hint: {"center_x": 0.5, "top": 0.90}
            multiline: True


        GridLayout:
            cols:3
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": 0.5, "top":0.7}

            Button:
                text: "camera"


            Button:
                text: "Language"
                

            Button:
                id: output
                text: "Measurement"

<LoadingWindow>:
    name: "Loading"

<OutputWindow>:
    name: "output"

    BoxLayout:
        orientation : "horizontal"

        Label:
            text: root.output_text


        Button:
            text: "go back"
            on_release: 
                app.root.current = "main"
