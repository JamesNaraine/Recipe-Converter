<MyGrid>

    input: input
    output: output

    GridLayout:
        cols:1
        size: root.width - 100, root.height - 100

        GridLayout:
            cols:2
            Label:
                text: "Input: "

            TextInput:
                id: input
                multiline:False

            Label:
                id: output
                text: ""

            TextInput:
                text: output.text
                multiline:False

        Button:
            text: "Submit"
            on_press: root.btn()

<FloatLayout>