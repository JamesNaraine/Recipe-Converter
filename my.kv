WindowManager:
    MainWindow: 

        name: "main"
        id: main_window
    LoadingWindow:
        name: "load"
        id: loading_window
    OutputWindow:
        name: "output"
        id: output_window


<MainWindow>:
    name: "main"

    input_text: input_field

    GridLayout:
        cols:1
        size: root.width + 1, root.height + 1

        GridLayout:
            cols:3
            size_hint: 0.2, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.95}

            Widget:

            Button:
                text: "go"
                on_press: root.btn()
                on_press: app.root.current = "output"

            Widget:

        TextInput:
            id: input_field
            size_hint:0.8, 0.6
            pos_hint: {"center_x": 0.5, "top": 0.90}
            multiline: True


        GridLayout:
            cols:4
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": 0.5, "top":0.7}

            Button:
                text: "camera"
                on_release: root.take_picture()

            Button:
                id: source_language
                text: root.source_language_button_text
                on_release: root.open_source_language()

            Button:
                id: language_button
                text: root.language_button_text
                on_release: root.open_language_dropdown()
                

            Button:
                id: measurement_button
                text: root.measurement_button_text
                on_release: root.open_measurement_dropdown()

            

<LoadingWindow>:
    name: "Loading"

<OutputWindow>:
    name: "output"
    output: output_field

    BoxLayout:
        orientation : "vertical"
        


        TextInput:
            
            id: output_field
            size_hint: 1, 0.8
            text: root.output_text

        BoxLayout:
            size_hint: 1, 0.2

            Button:
                text: "go back"
                
                on_release: 
                    app.root.current = "main"



            
            Button:
                text: "Copy"
                
                on_release: 
                    root.copy()


        
